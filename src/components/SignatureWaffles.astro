      src={waffle7}
      widths={[400, 500, 732]}
      aspectRatio={732 / 662}
      width={732}
      height={662}
      class="object-contain h-52 product-image"
      alt="Llama Gone Nuts: Waffles with Ice Cream and Banana with Almonds, and Peanut Butter Sauce"
      quality={80}
      format="avif"
    />
    <h5 class="uppercase">Llama Gone Nuts</h5>
    <p>
      Signature OG Liege Waffle topped with Vanilla ice cream fresh bananas,
      almonds and peanut butter sauce.
    </p>
  </div>
  <div class="box flow prose" style="--spot-color: var(--gray200);">
