---
import { Picture } from '@astrojs/image/components';
import map from '../assets/dolly-llama-plano-tx-map-squared.jpg';
---

<div
  id="location"
  class="grid spot-color-primary"
  data-layout="50-50"
  style="--gap: 0;"
>
  <div>
    <div class="box flow prose relative">
      <h2 class="uppercase">Where to find ice cream in Plano</h2>
      <div class="flow" style="--flow-space: var(--space-2xs);">
        <p class="font-display font-weight-emphasis uppercase step-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            style="fill: currentColor"
            class="icon"
            viewBox="0 0 384 512"
          >
            <path
              d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"
            ></path></svg
          >
          <a href="https://goo.gl/maps/Q5oQ9f12MuKEEQ2Z7" target="_blank"
            >8400 Preston Rd #150, Plano, TX 75024, USA</a
          >
        </p>
        <p class="font-display font-weight-emphasis uppercase step-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            style="fill: currentColor"
            class="icon"
            viewBox="0 0 512 512"
          >
            <path
              d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
            ></path></svg
          >
          <a href="tel:+4692872002" target="_blank">469-287-2002</a>
        </p>
      </div>
    </div>
  </div>
  <div>
    <a
      href="https://goo.gl/maps/Q5oQ9f12MuKEEQ2Z7"
      target="_blank"
      style="line-height: 0;"
    >
      <Picture
        src={map}
        widths={[1598, 700, 500]}
        aspectRatio={1598 / 1598}
        width={1598}
        height={1598}
        class="object-contain h-full"
        alt="A map to the best ice cream in Plano Texas"
        quality={80}
        format="avif"
      />
    </a>
  </div>
</div>
